<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
	<mapper namespace="com.library.mapper.admin.OverdueMapper">
		

		<!-- 회원 total -->
		<select id="get_total" resultType="int">
		
				select count(*) from loan_history 
				where datediff(return_period, current_timestamp) &lt; 0 
				and return_status = false <include refid="criteria"></include>
	
		</select>
		
		<!-- 대출 중 리스트 페이징 및 검색 시 -->
		<select id="overdue_list_paging" resultType="com.library.model.search.BookDTO">
	
				select * from loan_history 
				where datediff(return_period, current_timestamp) &lt; 0 
				and return_status = false <include refid="criteria"></include>
				order by loan_date
			  limit #{skip}, #{amount}
			
		</select>
		
		<select id="search_email" resultType="string">
			select user_email from member where user_id = #{user_id}
		</select>
		
		<!-- <update id="return_book">
			update loan_history
			   set return_date = current_timestamp, return_status = true
			 where loan_no = #{loan_no} 
		</update> -->
		
 		
		<sql id="criteria">
	        <if test="type != null">
			  	<if test="keyword != null">
			  	
			  		<if test="type == 'user_id'">
			  			and user_id like concat('%', #{keyword}, '%')
			  		</if>
			  		
			  		<if test="type == 'book_title'">
			  			and book_title like concat('%', #{keyword}, '%')
			  		</if>
			  		
			  		<if test="type == 'book_isbn'">
			  			and book_isbn like concat('%', #{keyword}, '%')
			  		</if>
			  		
				</if>
			</if>
	    </sql>
		
	</mapper>